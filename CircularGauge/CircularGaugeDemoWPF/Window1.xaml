<Window x:Class="CircularGaugeDemoWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gauge="clr-namespace:CircularGauge;assembly=CircularGauge"
    Title="Circular Gauge WPF Demo" Height="700" Width="700" >

    <Grid x:Name="LayoutRoot" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Black Gauge -->
            <gauge:CircularGaugeControl x:Name="myGauge1" Grid.Column="0" Grid.Row="0" 
                                        Radius="250" 
                                        ScaleRadius="210" 
                                        ScaleStartAngle="45" 
                                        ScaleSweepAngle="270"
                                        PointerLength="185" 
                                        PointerCapRadius="35" 
                                        MinValue="0" 
                                        MaxValue="16" 
                                        MajorDivisionsCount="16" 
                                        MinorDivisionsCount="5" 
                                        CurrentValue="{Binding Score}"
                                        RangeIndicatorThickness="8"
                                        RangeIndicatorRadius="220"
                                        RangeIndicatorLightRadius="20"
                                        RangeIndicatorLightOffset="-150"
                                        ScaleLabelRadius="190"
                                        ScaleLabelSize="40,20"
                                        ScaleLabelFontSize="16"
                                        ScaleLabelForeground="LightGray"
                                        MajorTickSize="10,3"
                                        MinorTickSize="3,1"
                                        MajorTickColor="LightGray"
                                        MinorTickColor="LightGray"
                                        GaugeBackgroundColor="Black"
                                        PointerThickness ="16"
                                        OptimalRangeStartValue="7"
                                        OptimalRangeEndValue="13.5" 
                                        DialTextOffset="100"
                                        DialText="RPM x 1000"
                                        DialTextColor="LightGray"
                                        DialTextFontSize="24"
                                        BelowOptimalRangeColor="LightGray"
                                        OptimalRangeColor="LightGray"
                                        >
            </gauge:CircularGaugeControl>

